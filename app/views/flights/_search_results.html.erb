<% if @flights.empty? %>
  <h2 class="col-12">No flight found</h2>
<% else %>
  <br><br>
  <h2 class="col-12">Search Results</h2>
  <%= form_tag({controller: 'bookings', action: 'new_booking'}, method: 'post') do %>
    <div class="row">
      <% @flights.each do |flight| %>
        <div class="col-sm-4">
          <div class="card flight-card">
            <div class="card-body">
              <h4 class="card-title"><%= flight.airport.location.name %> to <%= flight.destination.name %></h4>
              <p class="card-text"><%= flight.airport.name %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Departure Date: &nbsp;<strong><%= Date.parse(flight.flight_date).to_s %></strong></li>
              <li class="list-group-item">Available Seat: <%= flight.available_seats %></li>
            </ul>
            <div class="card-footer">
              <%= submit_tag 'Book Flight', class: "card-link btn btn-primary" %>
              <input name="flight_id" type="hidden" value= <%= flight.id %> />
              <input name="no_of_passengers" type="hidden" value= <%= params[:no_of_passengers] %> />
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
