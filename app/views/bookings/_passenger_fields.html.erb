<div class="nested-fields">
  <section>
    <div class="row">
      <div class="col-6 form-group">
        <%= f.label :first_name, class: "form-control-label" %>
        <%= f.text_field :first_name, { class: "form-control", required: true } %>
      </div>
      <div class="col-6 form-group">
        <%= f.label :last_name, class: "form-control-label" %>
        <%= f.text_field :last_name, { class: "form-control", required: true } %>
      </div>
    </div>
    <div class="row">
      <div class="col-6 form-group">
        <%= f.label :email, class: "form-control-label" %>
        <%= f.email_field :email, { class: "form-control", required: true } %>
      </div>
      <div class="col-6 form-group">
        <%= f.label :phone, class: "form-control-label" %>
        <%= f.phone_field :phone, { class: "form-control", required: true } %>
      </div>
    </div>
    <%= link_to_remove_association 'Remove Passenger', f, class: "remove-passenger" %>
  </section>
</div>