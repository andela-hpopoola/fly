<section class="inner-section past-booking">
  <div class="card">
    <%= form_tag('bookings/search', method: 'post', remote:true, class: 'form-inline') do %>
      <div class="input-group mb-2 mr-sm-2 mb-sm-0">
        <%= number_field_tag 'booking_id', nil, min: 1, class: 'form-control btn-mb30', placeholder:"Booking Ref. Code" %>
      </div>

      <div class="mb-2 mr-sm-2 mb-sm-0">
        <button type="submit" class="btn btn-primary btn-mb30">Search for Booking</button>
      </div>
    <% end %>
          
    <% if @bookings.count > 0 %>
      <table class="table">
        <h4 class="mt-5">Past Bookings</h4>

        <thead>
          <tr>
            <th>S/N</th>
            <th>Full Name</th>
            <th>Airline</th>
            <th>Airport</th>
            <th>Destination</th>
            <th>Departure Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% count = 0 %>
          <% @bookings.each do |booking| %>
            <% booking.passengers.each do |passenger| %>
              <tr>
                <td><%= count += 1 %></td>
                <td><%= passenger.first_name + ' ' + passenger.last_name %></td>
                <td><%= booking.flight.airline.name %></td>
                <td><%= booking.flight.airport.name %></td>
                <td>
                  <%= booking.flight.airport.location.name %>
                  <span class="fa fa-long-arrow-right"></span>
                  <%= booking.flight.destination.name %>
                </td>
                <td><%= display_date booking.flight.flight_date %></td>
                <td>
                  <%= link_to booking_path(booking), class: "icon-eye" do %>
                    <span class="fa fa-eye"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_booking_path(booking), class: "icon-edit" do %>
                    <span class="fa fa-edit"></span>
                  <% end %>
                </td>
                <td>
                  <%= link_to booking, method: :delete, data: { confirm: 'Are you sure you want to cancel booking?' }, class: "icon-delete" do %>
                    <span class="fa fa-times"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h2>You have no previous bookings</h2>
      <br>
      <a href="/flights" class ="btn btn-primary">Book A flight now</a>
    <% end %>
  </div>
</section>